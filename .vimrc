syntax on
filetype plugin indent on
set nowrap
set expandtab
set virtualedit=all
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smartindent
set number
set gdefault
set showmatch
set incsearch
set ignorecase
set smartcase

set t_Co=256
set background=dark

" create dir first ~/.vim/undo
set undofile
set undodir=~/.vim/undo

set hlsearch
nnoremap <C-L> :nohlsearch<CR>

colors sitruuna
